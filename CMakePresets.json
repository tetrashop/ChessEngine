{
  "version": 3,
  "configurePresets": [
    {
      "name": "vs2017-debug",
      "displayName": "Visual Studio 2017 Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "cmakeExecutable": "C:/Program Files/CMake/bin/cmake.exe" // Force CMake path
    }
  ]
}